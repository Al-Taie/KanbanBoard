<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Widget.App.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="cardElevation">5dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="strokeColor">@color/purple</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeBottomRight">20dp</item>
    </style>

    <!-- Round picture -->
    <style name="circleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!--add fragment styles-->
    <style name="codeChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/codechip_background_color</item>
        <item name="checkedIconTint">@color/green</item>
        <item name="rippleColor">@color/green</item>
    </style>

    <style name="designChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/designchip_background_color</item>
        <item name="checkedIconTint">@color/pink</item>
        <item name="rippleColor">@color/pink</item>
    </style>

    <style name="cutShape" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamilyTopLeft">cut</item>
        <item name="cornerFamilyBottomRight">cut</item>
        <item name="cornerSizeTopLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>


    <style name="homeImageStyle" parent="ShapeAppearance.MaterialComponents.MediumComponent">
    <item name="cornerSize">20dp</item>
    </style>

</resources>